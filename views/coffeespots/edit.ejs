<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= coffeespot.name %></h1>
        <div style = "width: 30%; margin: 30px auto;">
            <form action="/coffeespots/<%= coffeespot._id %>?_method=PUT" method="POST">
                <div class="form-group"><input class="form-control" type="text" name="coffeespot[name]" value="<%= coffeespot.name %>"></div>
                <div class="form-group"><input class="form-control" type="text" name="coffeespot[image]" value="<%= coffeespot.image %>"></div>
                <div class="form-group"><input class="form-control" type="text" name="coffeespot[description]" value="<%= coffeespot.description %>"></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
            </form>
            <a href="/coffeespots">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>